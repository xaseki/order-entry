<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>管理画面 | ログイン</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">


    {% stylesheets filter='cssrewrite'
    'assets/vendor/font-awesome/css/font-awesome.min.css'
    'assets/vendor/adminbsb-materialdesign/plugins/bootstrap/css/bootstrap.min.css'
    'assets/vendor/adminbsb-materialdesign/plugins/bootstrap-select/css/bootstrap-select.min.css'
    'assets/vendor/adminbsb-materialdesign/plugins/node-waves/waves.min.css'
    'assets/vendor/adminbsb-materialdesign/plugins/animate-css/animate.min.css'
    'assets/vendor/adminbsb-materialdesign/css/style.css'
    'assets/vendor/adminbsb-materialdesign/css/themes/all-themes.min.css'
    %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
    {% endstylesheets %}

    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    {% endblock %}




    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script src="{{ asset("assets/vendor/adminbsb-materialdesign/plugins/jquery/jquery.min.js") }}"></script>

</head>


<body class="login-page">

<div class="login-box">

    {% if error %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-ban"></i> Alert!</h4>
            <div>{{ error.message|trans }}</div>
        </div>
    {% endif %}

    <div class="logo">
        <a href="#">OrderEntry</a>
    </div>

    <div class="card">
        <div class="body">

            <form action="{{ path("admin_login_check") }}" method="post">
            <div class="msg">ユーザーIDとパスワードを入力してください</div>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">person</i>
                </span>
                {{ form_widget(form.username, {attr: {class:'form-control', placeholder: "Username"}}) }}
            </div>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">lock</i>
                </span>
                {{ form_widget(form.password, {attr: {class:'form-control', placeholder: "Password"}}) }}
            </div>
            <div class="row">
                <div class="col-xs-offset-8 col-xs-4">
                    <button class="btn btn-block bg-pink waves-effect" type="submit">SIGN IN</button>
                </div>
            </div>
            {{ form_rest(form) }}
            </form>
        </div>
    </div>
</div>


{% javascripts
"assets/vendor/adminbsb-materialdesign/plugins/momentjs/moment.js"

"assets/vendor/adminbsb-materialdesign/plugins/bootstrap/js/bootstrap.js"
"assets/vendor/adminbsb-materialdesign/plugins/bootstrap-select/js/bootstrap-select.min.js"
"assets/vendor/adminbsb-materialdesign/plugins/jquery-slimscroll/jquery.slimscroll.js"
"assets/vendor/adminbsb-materialdesign/plugins/node-waves/waves.js"
"assets/vendor/adminbsb-materialdesign/plugins/jquery-validation/jquery.validate.js"
"assets/vendor/adminbsb-materialdesign/js/admin.js"
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

</body>
</html>
