{% extends "AdminBundle::admin.html.twig" %}

{% block title %}アイテム管理 アイテム作成{% endblock %}

{% block body %}

    <div class="block-header">
        <h2>アイテム管理</h2>
    </div>

    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>アイテム作成</h2>
                </div>

                <div class="body">
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        {{ form_start(form, {'method': 'post', 'action': path('orderentry_admin_item_create'), 'attr': {'class': 'admin_item_create'} })}}

                        <div class="form-group form-float">
                            <div class="form-line">
                                {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group form-float">
                            {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        {{ form_rest(form) }}

                        <div class="text-center">
                            <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                        </div>

                        {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}

